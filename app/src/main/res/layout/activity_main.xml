<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">



        <TextView
            android:id="@+id/score_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#a4c639"
            android:paddingLeft="96dp"
            android:text="Score card"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#a4c639"
            android:text="Runs scored" />

        <Button
            android:id="@+id/single_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Single"
            android:textSize="16sp" />

        <Button
            android:id="@+id/double_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Double"
            android:textSize="16sp" />
        <Button
            android:id="@+id/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Four"
            android:textSize="16sp" />
        <Button
            android:id="@+id/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Six"
            android:textSize="16sp" />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#a4c639"
            android:text="Extras" />

        <Button
            android:id="@+id/wide_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Wide"
            android:textSize="16sp" />
        <Button
            android:id="@+id/no_ball_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="No ball"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total score"

            android:textSize="18sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="singles"

            android:textSize="18sp"
            android:textColor="#a4c639"/>
        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" doubles"

            android:textSize="18sp"
            android:textColor="#a4c639"/>
        <TextView
            android:id="@+id/fours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fours"

            android:textSize="18sp"
            android:textColor="#a4c639"/>
        <TextView
            android:id="@+id/sixes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sixes"

            android:textSize="18sp"
            android:textColor="#a4c639"/>
        <TextView
            android:id="@+id/extras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extras"

            android:textSize="18sp"
            android:textColor="#a4c639"/>







    </LinearLayout>
</ScrollView>